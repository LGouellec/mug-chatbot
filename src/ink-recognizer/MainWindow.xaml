<Window x:Class="ink_recognizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ink_recognizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <InkCanvas Grid.Row="0" Name="canvas" Background="White">
        </InkCanvas>
        <Button Grid.Row="1" Background="Green" Foreground="White" Margin="2" Content="Send Me !" FontSize="25" Click="Button_Click"></Button>
        <Button Grid.Row="2" Background="Red" Foreground="White" Margin="2" Content="Erase !" FontSize="25" Click="Button_Click_1"></Button>
        <TextBlock Grid.Row="3" Name="result" Background="Black" Foreground="White" FontWeight="Bold" FontSize="25"/>
    </Grid>
</Window>
