<Window x:Class="ink_recognizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ink_recognizer"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="0" Name="canvas" MouseDown="canvas_MouseDown" MouseMove="canvas_MouseMove" Background="White" MouseRightButtonDown="canvas_MouseRightButtonDown">
            <InkCanvas Name="theInkCanvas"></InkCanvas>
        </Canvas>
        <Button Grid.Row="1" Margin="5" Background="Green" Foreground="White" Content="Send Me !" FontSize="25" Click="Button_Click"></Button>
        <TextBlock Grid.Row="2" Name="result" Background="Black" Foreground="White" FontWeight="Bold"/>
    </Grid>
</Window>
